{
  "name": "cumbia",
  "version": "0.0.11",
  "description": "Cumbia aims to give you a thin layer between your HTML and JS. An opinionated way of creating components and craft a web page.",
  "main": "cumbia",
  "typings": "cumbia",
  "directories": {
    "example": "example"
  },
  "scripts": {
    "dev:lib": "node scripts/esbuild.js --dev",
    "dev:example": "parcel example/counter/index.html",
    "dev:docs": "parcel docs/index.html docs/getting-started/index.html",
    "build:example": "parcel build ./example/counter",
    "build:docs": "parcel build ./docs/index.html ./docs/getting-started/index.html",
    "build:lib": "rm -f cumbia.d.ts && tsc && node scripts/esbuild.js",
    "check:typescript": "tsc",
    "check:size": "bundlesize"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neomaxzero/cumbia.git"
  },
  "files": [
    "cumbia.js",
    "cumbia.d.ts"
  ],
  "author": "neomaxzero",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neomaxzero/cumbia/issues"
  },
  "homepage": "https://github.com/neomaxzero/cumbia#readme",
  "devDependencies": {
    "bundlesize": "^0.18.1",
    "esbuild": "^0.12.8",
    "parcel-bundler": "^1.12.5",
    "typescript": "^4.3.2",
    "yargs": "^17.0.1"
  }
}
